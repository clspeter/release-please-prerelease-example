{
    "release-type": "simple",
    "packages": {
        ".": {
            "release-type": "simple",
            "package-name": "hotcake-app-staging",
            "prerelease": true,
            "prerelease-type": "staging",
            "versioning": "prerelease",
            "changelog-sections": [
                {
                    "type": "feat",
                    "section": "✨ 新功能"
                },
                {
                    "type": "fix",
                    "section": "🐛 Bug 修復"
                },
                {
                    "type": "docs",
                    "section": "📚 文檔更新"
                },
                {
                    "type": "style",
                    "section": "💄 樣式調整"
                },
                {
                    "type": "refactor",
                    "section": "♻️ 代碼重構"
                },
                {
                    "type": "perf",
                    "section": "⚡ 性能優化"
                },
                {
                    "type": "test",
                    "section": "✅ 測試相關"
                },
                {
                    "type": "build",
                    "section": "📦 構建系統"
                },
                {
                    "type": "ci",
                    "section": "👷 CI/CD"
                },
                {
                    "type": "chore",
                    "section": "🔧 其他變更"
                }
            ],
            "pull-request-title-pattern": "chore${scope}: release ${version}",
            "pull-request-header": "🚀 Staging Release PR",
            "separate-pull-requests": false,
            "group-pull-request-title-pattern": "chore: release ${version}",
            "tag-separator": "@",
            "include-v-in-tag": true
        }
    }
}